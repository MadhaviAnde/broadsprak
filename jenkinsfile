pipeline {
    agent any
    environment{
    path = path:$/user/bin/
    
    
    }
     stages {
        stage('git') {
            steps {
                echo 'Hello World'
               git branch: 'main', url:"https://github.com/MadhaviAnde/broadsprak.git"
            }
        }
        
        stage('Dockercompose'){
            steps{
                
        script{
               
              sh 'pwd '
              sh 'cat docker-compose.yml'
             
             sh '/usr/bin/docker-compose --build up -d'
        
            }
                
           }
            
        }
       
}
post{
    
    always{
        emailext body: 'A test email', recipientProviders: [[$class:'DevelopersRecipientProvider']], subject: 'Test', to:'madhavilatha.ande@gmail.com'
    }
    
}
   
}
