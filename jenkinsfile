pipeline {
    agent any
     stages {
        stage('git') {
            steps {
                echo 'Hello World'
               git branch: 'main', url:"https://github.com/BroadSparkDev/docs.git"
            }
        }
        
        stage('Dockercompose'){
            steps{
                
        script{
              sh 'cd /home/ec2-user/mockserver/docs'
             sh 'docker-compose down '
             sh 'docker-compose up -d'
        
            }
                
           }
            
        }
       
}
post{
    
    always{
        emailext body: 'A test email', recipientProviders: [[$class:'DevelopersRecipientProvider']], subject: 'Test', to:'madhavilatha.ande@gmail.com'
    }
    
}
   
}
