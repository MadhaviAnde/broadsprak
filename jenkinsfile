pipeline {
    agent any
    environment {
        registry = 'docker.io/madhaviande/sample-repo'
        registryCredential = 'docker-hub-id'
        
        dockerImage = ''
    }
    
     stages {
        stage('git') {
            steps {
                echo 'Hello World'
               git branch: 'main', url:"https://github.com/MadhaviAnde/yuvan.git"
            }
        }
        
        stage('Dockerfile true'){
            steps{
                
        echo 'docker file is there'
                
            }
            
        }
       


      stage('Building our image') {
            steps {
                script {
                    sh 'docker info'
                    dockerImage = docker.build registry + ":v$BUILD_NUMBER"
                }
            }
        }
        stage('Push Image To DockerHUB') {
            steps {
                script {
                    docker.withRegistry( '', registryCredential ) {
                        dockerImage.push()
                    }
                }
            }
        }
      

}
post{
    
    always{
        emailext body: 'A test email', recipientProviders: [[$class:'DevelopersRecipientProvider']], subject: 'Test', to:'madhavilatha.ande@gmail.com'
    }
    
}
   
}
